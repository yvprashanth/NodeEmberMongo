<h2>List of Goals</h2>

{{#each model as |goal|}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{goal.title}}</h3>
    </div>
    <div class="panel-body">
      <p>Goal Number: {{goal.number}}</p>
      <p>Owner: {{goal.owner}}</p>
      <p>Due Date: {{goal.duedate}}</p>
      <p>Status: {{goal.status}}</p>
      <p>Notes: {{goal.notes}}</p>
    </div>
     <div class="panel-footer text-right">
          {{#link-to 'goals.edit' goal.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteGoal' goal}}>Delete</button>
    </div>
  </div>
{{/each}}
{{outlet}}
