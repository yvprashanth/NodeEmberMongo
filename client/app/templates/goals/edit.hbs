<h2 style=" text-align: center;">Edit Goal</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="The title of the Goal"}}
    </div>
  </div>


  <div class="form-group">
    <label class="col-sm-2 control-label">Goal Number</label>
    <div class="col-sm-10">
      {{input type="text" value=model.number class="form-control" placeholder="Goal Number"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Owner</label>
    <div class="col-sm-10">
      {{input type="text" value=model.owner class="form-control" placeholder="Owner Alias or Name"}}
    </div>
  </div>


  <div class="form-group">
    <label class="col-sm-2 control-label">Due Date</label>
    <div class="col-sm-10">
      {{bootstrap-datepicker placeholder="Due Date" autoclose=true todayHighlight=true class="form-control" value=model.duedate}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Notes</label>
    <div class="col-sm-10">
      {{input type="text" value=model.notes class="form-control" placeholder="Any additional notes"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveLibrary' model}}>Save changes</button>
    </div>
  </div>
</div>

