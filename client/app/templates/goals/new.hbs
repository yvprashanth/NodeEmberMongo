<h2>Add a New Goal</h2>
<div class="form-horizontal">
    <div class="form-group has-feedback {{if item.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Goal Name</label>
        <div class="col-sm-10">
          {{input type="text" value=model.name class="form-control" placeholder="Goal Name"}}
          {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Owner</label>
        <div class="col-sm-10">
          {{input type="text" value=model.address class="form-control" placeholder="Owner Alias or Name"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Due Date</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker placeholder="Due Date" autoclose=true todayHighlight=true class="form-control" value=model.phone}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Status</label>
        <div class="col-sm-10">
          {{input type="text" value=model.status class="form-control" placeholder="Status"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-10">
          {{textarea type="text-area" value=model.notes class="form-control" placeholder="Notes"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" 
                {{action 'saveGoal' model}} disabled={{unless item.isValid true}}>Create
            </button>
        </div>
    </div>
</div>