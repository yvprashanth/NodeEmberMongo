
<h2 style=" text-align: center;">Add a New Goal</h2>
<div class="form-horizontal">
    <div class="form-group has-feedback ">
        <label class="col-sm-2 control-label">Goal Name</label>
        <div class="col-sm-10">
          {{input type="text" value=model.title class="form-control" placeholder="Goal Name"}}
          {{#if model.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group has-feedback ">
        <label class="col-sm-2 control-label">Goal Number</label>
        <div class="col-sm-10">
          {{input type="text" value=model.number class="form-control" placeholder="Goal Number"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Owner</label>
        <div class="col-sm-10">
          {{input type="text" value=model.owner class="form-control" placeholder="Owner Alias or Name" id="people"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Due Date</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker placeholder="Due Date" autoclose=true todayHighlight=true class="form-control" value=model.duedate}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Status</label>
        <div class="col-sm-10">
          {{#power-select options=statusStates selected=model.status onchange=(action "foo") as |name| }}
                {{name.value}}
          {{/power-select}}
        </div>
    </div>

    {{#if showBlockedReason}}
        <div class="form-group">
            <label class="col-sm-2 control-label">Owner</label>
            <div class="col-sm-10">
            {{input type="text" value=model.blockedreason class="form-control" placeholder="Please enter Blocked Reason" id="blockedreason"}}
            </div>
        </div>
    {{/if}}
    <div class="form-group">
        <label class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-10">
          {{textarea type="text-area" value=model.notes class="form-control" placeholder="Notes"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" 
                {{action 'saveGoal' model}} disabled={{unless isValid true}}>Create
            </button>
        </div>
    </div>
</div> 
{{outlet}}
